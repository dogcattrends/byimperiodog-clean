# Example environment variables for local development and CI.
# Copy this file to `.env.local` and fill with your real secrets.

# Supabase (replace with your project values)
ADMIN_PASS=your_admin_password_here
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Application
NEXT_PUBLIC_SITE_URL=https://example.com
NEXT_PUBLIC_PHONE=+55 11 99999-9999

# OpenAI (server-only key)
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Vercel deployment (used by CI)
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here

# Contatos oficiais (replace with your business info)
NEXT_PUBLIC_PHONE=+55 11 99999-9999
NEXT_PUBLIC_WA_LINK=https://wa.me/5511999999999
NEXT_PUBLIC_EMAIL=contato@example.com
NEXT_PUBLIC_CNPJ=00.000.000/0001-00
NEXT_PUBLIC_PUPPIES_BUCKET=puppies

# Redes sociais (replace with your handles)
NEXT_PUBLIC_IG=https://instagram.com/your_handle
NEXT_PUBLIC_YT=https://youtube.com/@your_handle
# Se usar TikTok ou Telegram, escolha um:
# NEXT_PUBLIC_TT=https://www.tiktok.com/@your_handle
# NEXT_PUBLIC_TG=https://t.me/your_channel

NEXT_PUBLIC_SITE_URL=https://www.example.com

# GTM/GA4 (replace with your tracking IDs)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
NEXT_PUBLIC_GA4_ID=G-XXXXXXXXXX   # use se NÃO for usar GTM

# Pixels (replace with your pixel IDs)
NEXT_PUBLIC_META_PIXEL_ID=123456789012345
NEXT_PUBLIC_TIKTOK_PIXEL_ID=ABCDEFGHIJKL
NEXT_PUBLIC_PINTEREST_TAG_ID=2612345678901

# Opções (replace with your IDs)
NEXT_PUBLIC_HOTJAR_ID=xxxxx
NEXT_PUBLIC_HOTJAR_SV=6
NEXT_PUBLIC_CLARITY_ID=abcd1234