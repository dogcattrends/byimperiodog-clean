{
  "ci": {
    "collect": {
      "staticDistDir": ".next",
      "url": [
        "http://localhost:3000/",
        "http://localhost:3000/filhotes",
        "http://localhost:3000/blog",
        "http://localhost:3000/filhote/teste"  
      ],
      "settings": {
        "preset": "desktop",
        "formFactor": "desktop"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", {"minScore": 0.90}],
        "largest-contentful-paint": ["warn", {"maxNumericValue": 3000}],
        "cumulative-layout-shift": ["warn", {"maxNumericValue": 0.1}],
        "interactive": ["warn", {"maxNumericValue": 4500}],
        "total-blocking-time": ["warn", {"maxNumericValue": 400}],
        "uses-long-cache-ttl": ["off"],
        "unused-javascript": ["warn", {"maxLength": 180}],
        "total-byte-weight": ["warn", {"maxNumericValue": 350000}]
      }
    },
    "upload": { "target": "filesystem" }
  },
  "budgets": [
    {
      "path": "/",
      "resourceSizes": [
        { "resourceType": "script", "budget": 250 },
        { "resourceType": "total", "budget": 600 }
      ],
      "timings": [
        { "metric": "interactive", "budget": 4500 },
        { "metric": "largest-contentful-paint", "budget": 3000 },
        { "metric": "cumulative-layout-shift", "budget": 0.1 }
      ]
    }
  ]
}
